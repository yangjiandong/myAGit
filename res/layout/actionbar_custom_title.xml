<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical|left"
                  android:orientation="vertical">
        <TextView android:id="@+id/prefix_title"
                  android:textAppearance="@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle.Inverse"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:ellipsize="end" />
        <TextView android:id="@+id/title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="@style/TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse"
                  android:layout_marginTop="@dimen/abs__action_bar_subtitle_top_margin"
                  android:layout_marginBottom="@dimen/abs__action_bar_subtitle_bottom_margin"
                  android:singleLine="true"
                  android:ellipsize="end" />
    </LinearLayout>
</LinearLayout>