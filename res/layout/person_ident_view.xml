<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="7dip">
    <TextView
            android:id="@+id/person_ident_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Title"/>
    <ImageView
            android:id="@+id/person_ident_avatar"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_below="@id/person_ident_title"
            android:layout_alignLeft="@id/person_ident_title"
            android:scaleType="center"
            android:background="@drawable/gravatar_border"/>
    <TextView
            android:id="@+id/person_ident_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/person_ident_avatar"
            android:layout_alignTop="@id/person_ident_avatar"
            android:paddingLeft="6dip"
            android:textStyle="italic"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Someone"/>
    <TextView
            android:id="@+id/person_ident_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_ident_name"
            android:paddingLeft="6dip"
            android:layout_alignLeft="@id/person_ident_name"
            android:textStyle="italic"
            android:text="Sometime"/>
</RelativeLayout>