<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_commit_view_header_root"
              android:orientation="vertical"

              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:padding="7dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/commit_view_author_gravatar"
                android:layout_width="36px"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_height="36px"
                android:scaleType="center"
                android:background="@drawable/gravatar_border"
                android:layout_gravity="center"/>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/commit_view_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="16dip"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="eddieringle"
                        android:textColor="@color/gitHubBlue"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/textColor"
                        android:textSize="16dip"
                        android:ellipsize="end"
                        android:text="(author)"
                        android:maxLines="1"
                        android:paddingLeft="3dip"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/commit_view_author_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textColor"
                    android:textSize="16dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="February 10, 2010"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/commit_view_author_layout"
            android:orientation="horizontal"
            android:padding="7dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        <ImageView
                android:id="@+id/commit_view_committer_gravatar"
                android:layout_width="36px"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_height="36px"
                android:scaleType="center"
                android:background="@drawable/gravatar_border"
                android:layout_gravity="center"/>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/commit_view_committer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="16dip"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/gitHubBlue"
                        android:text="mfoo"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/textColor"
                        android:textSize="16dip"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="3dip"
                        android:text="(committer)"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/commit_view_committer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textColor"
                    android:textSize="16dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="February 10, 2010"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/commit_view_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="16dip"
            android:textColor="@color/darkText"
            android:text="commit message here"
            android:padding="10dip"/>
</LinearLayout>